			MOV		r0, #2
			LDR		SP, =pila
			BL		efectoPulso
			END
			
efectoPulso
			STMFD	SP!, {r4, r5, r6, r7, r8, r9, r10, LR}
			MOV		r10, #tabla
			MOV		r6, #0
			MOV		r9, r0
ForEfectoPulso
			LDRB		r4, [r10, r6]
			MOV		r0, r4
			BL		mostrar
			MOV		r0, r9
			BL		retardo
			BL		SystemCLS
			ADD		r6, r6, #1
			CMP		r6, #8
			BNE		ForEfectoPulso
			BL		Termino
			
mostrar
			;		R0 contiene el valor a mostrar en los LEDs
			MOV		PC, LR
			
retardo
			;		R0 contiene el valor de retardo
			MOV		PC, LR
			
SystemCLS
			;		Implementa la limpieza de pantalla
			MOV		PC, LR
			
Termino
			LDMFD	SP!, {r4, r5, r6, r7, r8, r9, r10, LR}
			MOV		PC, LR
			
			;		Aquí va la declaración de la tabla y la pila
tabla		DCB		0x0, 0x81, 0xC3, 0xE7, 0xFF, 0xE7, 0xC3, 0x81
pila			EQU		0x20000000  ; Dirección de inicio de la pila
